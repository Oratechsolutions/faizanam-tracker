            <!-- Start Page content -->
            <div class="content">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-12">
                                    <div class="card-box">
                                        <h4 class="m-t-0 header-title">Add New Security Guard </h4>
                                        <p class="text-muted m-b-30 font-14">
                                            THIS IS WHERE YOU ADD A NEW PROFILE FOR A SECURITY GUARD
                                        </p>
                                        <form class="" method="POST" action="/auth/register-guards-firebase" enctype="multipart/form-data">
                                            <div class="p-20">
                                                <div class="form-group row">
                                                    <div class="col-6">
                                                        <input type="text" name="firstname" id="example-input-normal" class="form-control" required placeholder="Enter the First Name">
                                                    </div>

                                                    <div class="col-6">
                                                        <input type="text" name="lastname" id="example-input-normal" class="form-control" required placeholder="Enter the Last Name">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-6">
                                                        <input type="email" name="email" id="example-input-normal" class="form-control" required placeholder="Enter the User Email">
                                                    </div>

                                                    <div class="col-6">
                                                        <input type="number" name="phone" id="example-input-normal" class="form-control" required placeholder="Enter the User Phone Number">
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-6">
                                                        <input type="number" name="id_number" id="example-input-normal" class="form-control" required placeholder="Enter ID Number">
                                                    </div>

                                                    <div class="col-6 input-group">

                                                        <input type="text" class="form-control" name="dob" required placeholder="mm/dd/yyyy" id="datepicker">
                                                        <div class="input-group-append">
                                                            <span class="input-group-text">
                                                                <i class="mdi mdi-calendar"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-12">
                                                        <input type="file" name="profile_picture" class="form-control" required>
                                                    </div>
                                                
                                                </div>


                                                <!-- <div class="form-group row">
                                                                                                        <div class="col-6">
                                                                                                            <input type="text" name="firstname" id="example-input-normal" class="form-control" required placeholder="Enter the First Name">
                                                                                                        </div>
                                                                                                    
                                                                                                        <div class="col-6">
                                                                                                            <input type="text" name="lastname" id="example-input-normal" class="form-control" required placeholder="Enter the First Name">
                                                                                                        </div>
                                                                                                    </div> -->
                                                <div class="form-group row">
                                                    <button type="submit" class="btn btn-block btn-xs btn-success waves-effect waves-light">Register Guard</button>
                                                </div>
                                        </form>
                                        </div>
                                    </div>
                                    <!-- end card-box -->
                                </div>
                                <!-- end col -->
                            </div>
                            <!-- end row -->
                        </div>
                        <!-- end col -->

                        <div class="col-md-4">
                            <div class="card-box">
                                <h4 class="header-title m-b-30">Recently Added Guards</h4>

                                <div id="datapick">



                                </div>
                            </div>
                        </div>
                        <!-- end col -->
                    </div>
                    <!-- end row -->

                </div>
                <!-- container -->

            </div>
            <!-- content -->

            <footer class="footer text-right">
                <% include ../partials/footer%>
            </footer>

        </div>


        <!-- ============================================================== -->
        <!-- End Right content here -->
        <!-- ============================================================== -->


    </div>
    <!-- END wrapper -->



