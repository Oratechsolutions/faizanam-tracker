    <script src="/js/waves.js"></script>
    <script src="/js/jquery.slimscroll.js"></script>

    <!-- App js -->
    <script src="/js/jquery.core.js"></script>
    <script src="/js/jquery.app.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded',function(){
            fetch('/data/registeredguards').then(res=>res.json()).then(data=>{
                // we now have the data
                let li = ''
                Array.from(data).forEach(list=>{
                    li += `
                        <div class="media m-b-20">
                            <div class="d-flex mr-3">
                                <a href="#">
                                    <img class="media-object rounded-circle thumb-sm" alt="64x64" src="${list.profile_picture.split('public')[1]}"> </a>
                            </div>
                            <div class="media-body">
                                <h5 class="mt-0">${list.firstname} ${list.lastname}</h5>
                                <p class="font-13 text-muted mb-0">
                                    <a href="" class="text-dark">${list.phone}</a>
                                </p>
                            </div>
                        </div>
                    `
                })
                document.getElementById('datapick').innerHTML=li
                console.log(data)
            })
